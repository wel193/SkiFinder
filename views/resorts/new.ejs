<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Add New Resort</h1>
    <div class="col-6 offset-3">
        <form action="/resorts" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="resort[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="resort[location]" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
              </div>
            
            <div class="mb-3">
                <label class="form-label" for="price">Lift ticket Price</label>
                    <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" 
                    aria-describedby="price-label" name="resort[price]" required>
              </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="resort[description]" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Resort</button>
            </div>
        </form>
        <a href="/resorts">Cancel</a>
    </div>
</div>